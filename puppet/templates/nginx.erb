upstream coviolations.web {
    server localhost:8102 fail_timeout=0;
}

upstream coviolations.push {
    server localhost:9102;
}

server {
    listen 80;
    server_name  www.<%= @domain %>;
    rewrite ^(.*) http://<%= @domain %>$1 permanent;
}

server {
    listen 80;
    server_name  <%= @domain %>;

    keepalive_timeout 5;

    # path for static files
    location /media/ {
        rewrite ^(.*)/$ $1;
        root /var/www/coviolations/;
    }

    location /static/ {
        rewrite ^(.*)/$ $1;
        root /var/www/coviolations/;
    }

    location /sub {
        proxy_pass http://coviolations.push;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://coviolations.web;
    }
}
